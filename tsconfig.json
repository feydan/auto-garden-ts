{
  "compilerOptions": {
    "lib": ["es2015"],
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["./src/*", "src/tools/raspberry-pi"],
  "exclude": ["**/*.spec.ts"]
}
